<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.AddTaskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenBackgroundAdd"
        android:orientation="vertical">
        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Название задачи"
            android:gravity="top"
            android:textSize="24sp"
            android:textColorHint="@color/whiteTextColor"
            android:textColor="@color/whiteTextColor"/>

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/fab_margin"
            android:ems="10"
            android:hint="Описание задачи"
            android:inputType="textPersonName"
            android:textColor="@color/whiteTextColor"
            android:textColorHint="@color/whiteTextColor"
            android:textSize="24sp"
            android:gravity="top" />

        <TimePicker
            android:id="@+id/taskStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            android:textSize="24sp"
            android:timePickerMode="spinner"
            android:layout_gravity="center" />

        <TimePicker
            android:id="@+id/taskTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:ems="10"
            android:numbersSelectorColor="@color/whiteTextColor"
            android:numbersInnerTextColor="@color/whiteTextColor"
            android:gravity="center"
            android:timePickerMode="spinner"
            android:inputType="time"
            android:textSize="24sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="Создать"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>